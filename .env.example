# Environment Configuration for Vercel Deployment
NODE_ENV=production
PORT=3000
SESSION_SECRET=your-jwt-secret-key-here

# Development Database (MySQL) - For local development
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=songbanksdb
DB_USERNAME=your-mysql-username
DB_PASSWORD=your-mysql-password

# Production Database (PostgreSQL) - For Vercel deployment
PROD_DB_HOST=your-postgres-host
PROD_DB_PORT=5432
PROD_DB_DATABASE=your-database-name
PROD_DB_USERNAME=your-postgres-username
PROD_DB_PASSWORD=your-postgres-password
PROD_DB_SSL=require
PROD_DB_URL=postgresql://username:password@host:port/database?sslmode=require

# Optional: SSH Configuration for manual deployment
SSH_USERNAME=your-ssh-username
SSH_SERVER=your-server-ip
SSH_PORT=22
SSH_DESTINATION_PATH=/path/to/deployment